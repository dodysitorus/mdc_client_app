<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Include.HomeFragmentData">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/gambar1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GINGIVITIS"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kondisi tersebut bisa menandakan kamu mengalami gingivitis.
                        gingivitis adalah kondisi gusi yang disebabkan oleh infeksi bakteri dan mengakibatkan inflamasi atau pembengkakan pada gusi yang ditandai dengan memerahnya gusi di sekitar bagian gusi yang paling dekat dengan gigi. Penyakit ini merupakan tahap awal dari penyakit gusi yang berbahaya yaitu periodontitis ( infeksi gusi serius yang bisa merusak jaringan tulang penyokong gigi) jika tidak ditangani dengan baik. "
                        android:fontFamily="sans-serif"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_content_2"
            android:layout_below="@+id/card_content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/gambar2" />

                <LinearLayout
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLEACHING GIGI"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bleaching Gigi adalah prosedur tindakan medis Untuk memutihkan gigi dan mencerahkan gigi,dengan menghilangkan noda pada gigi sehingga lebih percaya diri untuk senyum,dan memiliki gigi yang putih setelah bleaching akan memberikan semangat untuk menjaga kebersihan dan kesehatan gigi."
                        android:fontFamily="sans-serif"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_content_3"
            android:layout_below="@+id/card_content_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/gambar3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scaling atau Pembersihan Karang Gigi
"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scaling gigi adalah prosedur yang dilakukan untuk membersihkan  dan menghilangkan Plak (tartar)  dengan menggunakan alat yang disebut Ultrasonic Scaler."
                        android:fontFamily="sans-serif"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_content_4"
            android:layout_below="@+id/card_content_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/gambar4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pindah Kontrol Kawat Gigi / Behel"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pada saat pergerakan gigi sudah mulai bagus nanti dokter akan melakukan pergantian kawat sesuai dengan indikasi pada saat itu, biaya kawat baru baik itu Nickel Titanium atau Stainless hanya 50rb saja ya per-kawat nya."
                        android:fontFamily="sans-serif"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <LinearLayout
            android:id="@+id/ll_completeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/card_content_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Selengkapnya lihat disini...."
                android:textColor="@color/black"/>
            <ImageButton
                android:id="@+id/img_btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>
        </LinearLayout>

        <include
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll_completeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/fragment_location"/>
    </RelativeLayout>

</ScrollView>