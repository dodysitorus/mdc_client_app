<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Klinik.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Widget.Klinik.Map.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/location_button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:state_checked">false</item>
        <item name="android:state_active">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.ToolbarFont" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="BottomSheetItemKeluar">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/red_9</item>
    </style>

</resources>